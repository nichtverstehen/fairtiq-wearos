<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:importantForAccessibility="noHideDescendants">

    <ImageView
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_gravity="center"
        android:layout_margin="12.0dip"
        app:srcCompat="@drawable/zs_request_conversations_disabled_menu_ic_add_attachments" />

    <FrameLayout
        android:id="@id/request_actionview_badge_container"
        android:layout_width="18.0dip"
        android:layout_height="18.0dip"
        android:layout_gravity="end|center|top"
        android:visibility="gone"
        android:layout_marginTop="6.0dip"
        android:layout_marginRight="6.0dip"
        android:layout_marginEnd="6.0dip">

        <View
            android:id="@id/request_actionview_compat_shadow"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_gravity="center"
            android:background="@drawable/zs_request_dropshadow"
            android:visibility="gone" />

        <TextView
            android:id="@id/request_actionview_attachment_count"
            android:layout_width="14.0dip"
            android:layout_height="14.0dip"
            android:textSize="10.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/zs_request_attachment_actionview_badge"
            android:elevation="2.0dip" />

    </FrameLayout>

</merge>
