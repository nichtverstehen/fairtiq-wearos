<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/postJourneyErrorMessageContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@id/postJourneyErrorRedCircleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/illu_clouds_connection_dark"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@id/postJourneyErrorLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@id/postJourneyErrorLabel"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:textColor="@color/grayscale_020"
        android:layout_marginTop="@dimen/spacing_m"
        android:text="@string/GenericAPIError"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/spacing_xxxl"
        android:layout_marginEnd="@dimen/spacing_xxxl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postJourneyErrorRedCircleImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
