<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/messageCardContainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:tag="layout/component_message_card_0"
    app:cardBackgroundColor="@color/general_confirm"
    app:cardCornerRadius="6.0dip">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/messageText"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:tag="binding_1"
            android:layout_margin="@dimen/spacing_m"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            style="@style/RegularLight" />

        <Button
            android:id="@id/messageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/general_confirm"
            android:tag="binding_2"
            android:layout_marginTop="@dimen/spacing_xl"
            android:layout_marginBottom="@dimen/spacing_m"
            android:textAllCaps="true"
            android:layout_marginEnd="@dimen/spacing_m"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/messageImage"
            app:layout_constraintTop_toBottomOf="@id/messageText"
            style="@style/ButtonMedium" />

        <ImageView
            android:id="@id/messageImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_3"
            android:layout_marginTop="@dimen/spacing_m"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/messageText"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
