<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:tag="layout/fragment_rooted_device_0"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/topSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_shades">

        <View
            android:id="@id/headerContainer"
            android:layout_width="fill_parent"
            android:layout_height="130.0dip"
            android:background="@color/primary_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:textSize="25.0sp"
            android:textColor="@color/grayscale_100"
            android:gravity="center_horizontal"
            android:layout_margin="32.0dip"
            android:text="@string/JailbrokenHeadingTitle"
            android:fontFamily="@font/lato_regular"
            app:layout_constraintBottom_toBottomOf="@id/headerContainer"
            app:layout_constraintEnd_toEndOf="@id/headerContainer"
            app:layout_constraintStart_toStartOf="@id/headerContainer"
            app:layout_constraintTop_toTopOf="@id/headerContainer" />

        <ImageView
            android:id="@id/busImage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip"
            android:src="@drawable/ic_illu_clouds_bus_light"
            android:contentDescription="@null"
            android:layout_marginStart="8.0dip"
            android:layout_marginEnd="8.0dip"
            app:layout_constraintBottom_toTopOf="@id/verticalCenterGuide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerContainer"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/verticalCenterGuide"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@id/rootedTitle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:text="@string/JailbrokenOopsTitle"
            android:layout_marginStart="32.0dip"
            android:layout_marginEnd="32.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/busImage"
            style="@style/paragraphTitle" />

        <TextView
            android:id="@id/rootedSubTitle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:text="@string/JailbrokenExplanation"
            android:layout_marginStart="32.0dip"
            android:layout_marginEnd="32.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rootedTitle"
            app:layout_constraintVertical_bias="0.0"
            style="@style/paragraph" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
