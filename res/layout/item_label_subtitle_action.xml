<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:tag="layout/item_label_subtitle_action_0"
    android:background="@drawable/white_background"
    android:paddingTop="@dimen/spacing_m"
    android:paddingBottom="@dimen/spacing_m"
    android:paddingStart="@dimen/spacing_l"
    android:paddingEnd="@dimen/spacing_s"
    android:paddingVertical="@dimen/spacing_m">

    <ImageView
        android:id="@id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="binding_1"
        android:contentDescription="@null"
        android:layout_marginEnd="@dimen/spacing_s"
        app:layout_constraintBottom_toBottomOf="@id/itemLabelSubtitleActionTitle"
        app:layout_constraintEnd_toStartOf="@id/itemLabelSubtitleActionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemLabelSubtitleActionTitle" />

    <TextView
        android:id="@id/itemLabelSubtitleActionTitle"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:tag="binding_2"
        app:layout_constraintBottom_toTopOf="@id/itemLabelSubtitle"
        app:layout_constraintEnd_toStartOf="@id/itemLabelSubtitleAction"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/RegularDark" />

    <TextView
        android:id="@id/itemLabelSubtitle"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:tag="binding_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemLabelSubtitleAction"
        app:layout_constraintStart_toStartOf="@id/itemLabelSubtitleActionTitle"
        app:layout_constraintTop_toBottomOf="@id/itemLabelSubtitleActionTitle"
        style="@style/SubtitleGrey" />

    <TextView
        android:id="@id/itemLabelSubtitleAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="binding_4"
        app:drawableEndCompat="@drawable/ic_chevron_right_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemLabelSubtitleActionTitle"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/RegularDark" />

</androidx.constraintlayout.widget.ConstraintLayout>
