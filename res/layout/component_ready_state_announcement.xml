<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:tag="layout/component_ready_state_announcement_0"
    android:paddingLeft="@dimen/spacing_l"
    android:paddingTop="@dimen/spacing_s"
    android:paddingRight="@dimen/spacing_l"
    android:paddingBottom="@dimen/spacing_s"
    android:paddingHorizontal="@dimen/spacing_l"
    android:paddingVertical="@dimen/spacing_s">

    <TextView
        android:id="@id/communicationTitleText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="binding_1"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/communicationDescriptionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TitleDark" />

    <TextView
        android:id="@id/communicationDescriptionText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="binding_2"
        android:layout_marginTop="@dimen/spacing_s"
        app:layout_constraintBottom_toTopOf="@id/communicationActionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/communicationTitleText"
        style="@style/RegularDark" />

    <Button
        android:id="@id/communicationActionButton"
        android:layout_width="wrap_content"
        android:tag="binding_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/communicationDescriptionText"
        style="@style/darkRoundButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
